{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "lib": [
        "es7",
        "dom"
      ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist"]
  }