{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "compilerOptions": {
      "moduleResolution": "node",
      "allowJs": true,
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".",
      "declaration": true,
      "lib": ["es6", "dom", "dom.iterable"],
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts",
      "src/module/*.js"
    ],
    "exclude": ["dist"]
  }