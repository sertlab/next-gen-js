{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "compilerOptions": {
      "allowJs": true,
      "outDir": "dist.node",
      "moduleResolution": "node",
      "baseUrl": "src",
      "declaration": true,
      "paths": {
        "src/*": ["./*"]
      },
      "typeRoots": [
        "./node_modules/@types", 
        "./src/types"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/module/*.js",
      "src/modules/tracking/lib/main.js"
    ],
    
    "exclude": ["dist", "node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"]
  }